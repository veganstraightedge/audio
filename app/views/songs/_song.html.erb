<section class="mb-4" id="<%= classifize(song.pretty_name + "_from_" + song.album.name) %>">
  <h4 class=" <%= 'h1' if show_action? && controller_name == "songs" %>">
    <%= link_to_unless_current song.pretty_name, sanatized_song_seo_path(song) %>
  </h4>

  <% if controller_name == "songs" %>
    <div class="meta">
      <%= by %>
      <%= link_to song.album.band.name, sanatized_band_seo_path(song.album.band) %>
      <%= from %>
      <%= link_to song.album.name, sanatized_album_seo_path(song.album) %>
    </div>

    <% if show_action? %>
      <audio class="my-3 w-100" controls>
        <source src="<%= remote_audio_url(song) %>">
      </audio>
    <% end %>
  <% end %>

  <%= link_to "Download MP3", remote_audio_url(song), class: "btn btn-sm btn-outline-secondary" %>
</section>
