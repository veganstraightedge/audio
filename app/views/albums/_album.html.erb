<section class="album" id="<%= classifize(album.name + "_by_" + album.band.name) %>">
  <h3>
    <%= link_to_unless_current album.name, sanatized_album_seo_path(album) %>
    <% if logged_in? %>
      <span class="actions">
        <%= link_to 'Edit', edit_album_path(album) %>
        <%= link_to 'Destroy', album, :confirm => "Don't forget to delete/reassign this album's songs, too", :method => :delete %>
      </span>
    <% end %>
  </h3>

  <% if controller_name == "albums" %>
    <div class="meta">
      <%= by %>
      <%= link_to album.band.name, sanatized_band_seo_path(album.band), :class => "band_name" %>
    </div>
  <% end %>

  <%= render album.songs %>
</section>